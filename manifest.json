{
    "manifest_version": 2,
    "name": "Whale Time",
    "version": "1.0.0",
    "description": "Chrome extension applications for browser history control",

    "permissions": ["history", "storage", "https://www.gstatic.com/charts/loader.js"],

    "icons":{
        "128":"image/whale_128.png"
    },

    "background" : {
        "scripts": ["background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_popup": "index.html",
        "default_icon": {
            "16":"image/whale_128.png"
        },
        "default_title": "Whale Time"
      },

    "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.gstatic.com/; object-src 'self'"

}